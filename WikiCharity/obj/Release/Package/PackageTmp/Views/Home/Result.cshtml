@model IEnumerable<WikiCharity.Models.CharityModel>

@{
    ViewBag.Title = "Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Result</h2>

<table id="example" class="table table-striped">
    <thead>
        <tr>
            <th>Charity Name</th>
            <th>Charity Website</th>
            <th>Charity Registed Date</th>
            <th>Benificials</th>
            <th>DGR</th>
            <th>Size</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Charity Name</th>
            <th>Charity Website</th>
            <th>Charity Registed Date</th>
            <th>Benificials</th>
            <th>iS DGR</th>
            <th>Size</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var charity in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => charity.CharityName)</td>
                @if (charity.Website.Contains("http://"))
                {
                    <td><a href="@charity.Website">@charity.Website</a></td>
                }
                else if (charity.Website == "NA")
                {
                    <td>Website doesn't exist</td>
                }
                else
                {
                    <td><a href="http://@charity.Website">@charity.Website</a></td>
                }
                <td>@Html.DisplayFor(modelItem => charity.RegisDate)</td>
                <td>@String.Join(", ", charity.tags.ToArray())</td>
                @if (charity.DGR == true)
                {
                    <td>yes</td>
                }
                else
                {
                    <td>no</td>
                }
                <td>@Html.DisplayFor(modelItem => charity.Size)</td>
            </tr>
        }
    </tbody>
</table>