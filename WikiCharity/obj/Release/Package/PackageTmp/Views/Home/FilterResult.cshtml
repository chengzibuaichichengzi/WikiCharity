@model IEnumerable<WikiCharity.Models.Charity>
@{
    ViewBag.Title = "FilterResult";
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="keywords" content="">

    <title>WikiCharity - Search Result</title>

    <!-- Styles -->

    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/responsive.dataTables.min.css" rel="stylesheet" />


    <link href="~/assets/css/app.min.css" rel="stylesheet">
    <link href="~/assets/css/thejobs.css" rel="stylesheet">
    <link href="~/assets/css/custom.css" rel="stylesheet">

    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Raleway:100,300,400,500,600,800%7COpen+Sans:300,400,500,600,700,800%7CMontserrat:400,700' rel='stylesheet' type='text/css'>

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="icon" href="~/assets/img/favicon.ico">
</head>
<body class="nav-on-header smart-nav">
    <!-- Navigation bar -->
    <nav class="navbar">
        <div class="container">

            <!-- Logo -->
            <div class="pull-left">
                <a class="navbar-toggle" href="#" data-toggle="offcanvas"><i class="ti-menu"></i></a>

                <div class="logo-wrapper">
                    <a href="@Url.Action("Index", "Home", null)">
                        <img class="logo-alt" src="~/Uploads/logo.png" alt="logo-alt" style="width:90px;height:60px;">
                    </a>
                </div>

            </div>
            <!-- END Logo -->
            <!-- Navigation menu -->
            <ul class="nav-menu">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Donor Advice", "DonorAdvice", "Home")</li>
                <li>@Html.ActionLink("FAQs", "FAQs", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            <!-- END Navigation menu -->

        </div>
    </nav>
    <!-- END Navigation bar -->
    <header class="page-header bg-img">
        <div class="container page-name">
            <h1 class="text-center">Charity Search Results</h1>
            <p class="lead text-center">Helping you find charities that meet your criteria</p>
        </div>
    </header>
    <!-- END Page header -->
    <!-- Result Table-->
    <main>



        @if (Model.Count() != 0)
            {
        <!-- Filter Table-->
            <div class="container">
                <h4>You selected:</h4>
                <h6><b>State:</b> @ViewBag.State,   <b>Size:</b> @ViewBag.Size,   <b>Tax Deductible Status:</b>@ViewBag.Tax, <b>Name: </b>@ViewBag.Name</h6>
                <h6><b>Beneficiaries: </b>@ViewBag.Bene</h6>


                <table id="example" class="display responsive" style="width:100%; text-align:justify">
                    <thead>
                        <tr>
                            <th>Charity Name</th>
                            <th>Description</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                </table>

            </div>
        }

        else
        {
            <div class="container">
                <h4>You selected:</h4>
                <h6><b>State:</b> @ViewBag.State,   <b>Size:</b> @ViewBag.Size,   <b>Tax Deductible Status:</b>@ViewBag.Tax, <b>Name: </b>@ViewBag.Name</h6>
                <h6><b>Beneficiaries: </b>@ViewBag.Bene</h6>
                <h3 style="text-align:center;">Sorry, no result. You can try other filters.</h3>
            </div>
        }
    </main>

    <!-- END Filter Table-->
    <!-- Site footer -->
    <footer class="site-footer">

        <!-- Top section -->
        <div class="container">
            <div class="row">
                <div>
                    <h6>About</h6>
                    <p class="text-justify">WikiCharity is a digital platform which is used to connect businesses and charities across Australia. The website would serve as a bridge which would enable the user to search charities according to his preference, provide and compare information on the charity’s basic financial data as well.  This will help the users to narrow down on the charities which they want to donate. </p>
                </div>

            </div>

            <hr>
        </div>
        <!-- END Top section -->
        <!-- Bottom section -->
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">

                    <p class="copyright-text">Copyrights &copy; @DateTime.Now.Year All Rights Reserved by QingGari</p>
                </div>
            </div>
        </div>
        <!-- END Bottom section -->

    </footer>
    <!-- END Site footer -->
    <!-- Back to top button -->
    <a id="scroll-up" href="#"><i class="ti-angle-up"></i></a>
    <!-- END Back to top button -->
    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/cusTable.js"></script>


    <script src="~/assets/js/thejobs.js"></script>
</body>
</html>
