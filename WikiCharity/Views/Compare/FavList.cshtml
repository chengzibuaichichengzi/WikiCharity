@model IEnumerable<WikiCharity.Models.Charity>
@{
    ViewBag.Title = "Favourite List";
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="keywords" content="">

    <title>WikiCharity - Favourite List</title>

    <!-- Styles -->

    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/responsive.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/fixedHeader.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />


    <link href="~/assets/css/app.min.css" rel="stylesheet">
    <link href="~/assets/css/thejobs.css" rel="stylesheet">
    <link href="~/assets/css/custom.css" rel="stylesheet">
    <link href="~/Content/chosen.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="icon" href="~/assets/img/favicon.ico">
</head>
<body class="nav-on-header smart-nav">
    <!-- Navigation bar -->
    <nav class="navbar">
        <div class="container">

            <!-- Logo -->
            <div class="pull-left">
                <a class="navbar-toggle" href="#" data-toggle="offcanvas"><i class="ti-menu"></i></a>

                <div class="logo-wrapper">
                    <a href="@Url.Action("Index", "Home", null)">
                        <img class="logo-alt" src="~/Uploads/logo.png" alt="logo-alt" style="width:90px;height:60px;">
                    </a>
                </div>

            </div>
            <!-- END Logo -->
            <!-- Navigation menu -->
            <ul class="nav-menu">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Favourite List", "FavList", "Compare")</li>
                <li>@Html.ActionLink("Donor Advice", "DonorAdvice", "Home")</li>
                <li>@Html.ActionLink("FAQs", "FAQs", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>

                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            <!-- END Navigation menu -->

        </div>
    </nav>
    <!-- END Navigation bar -->
    <header class="page-header bg-img size-lg" style="background-image: url(/Uploads/pebblesbeachh.jpg)">
        <div class="container no-shadow">
            <h1 class="text-center">Your Favourite Charity List</h1>
            <p class="lead text-center">You can compare up to three charities.</p>
        </div>
    </header>
    <!-- END Page header -->
    <main>
        <section>
            <!-- Fav Table-->
            <div class="container">

                <div style="text-align:right">
                    <a class="btn btn-info btn-sm" href="/Home/FilterResult">Clike here to view more charities</a>
                </div>            @if (Model != null && Model.Count() > 0)
            {
                    <table id="favTable" class="display" style="width:100%;">
                        <thead>
                            <tr>
                                <th style="width:20%">Charity Name</th>
                                <th style="width:6%">Size</th>
                                <th style="width:8%">
                                    <div style="border-bottom: 1px dotted black;">
                                        <span title="States whether the charity has been active and conducted any of its said activities in the last year">
                                            Conducted Activities

                                         </span>
                                    </div>
                                </th>
                                <th>Purpose</th>
                                <th>Beneficiaries</th>
                                <th>Select to Compare</th>
                                <th>Id</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => i.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => i.Size)</td>
                                    <td>@Html.DisplayFor(modelItem => i.conActivity)</td>
                                    <td>@Html.DisplayFor(modelItem => i.MainActivity)</td>
                                    <td>@Html.DisplayFor(modelItem => i.selectedBenes)</td>
                                    <td width="8%"><button class="btn btn-primary" name="all" id="@i.Id">Select</button></td>
                                    <td vis>@Html.DisplayFor(modelItem => i.Id)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />

                    <form style="text-align:right">
                        <button class="btn btn-info btn-sm" id="compareBtn2" formaction="/Compare/compare" style="display:inline">Compare selected charities >></button>
                        <button class="btn btn-info btn-sm" id="compareBtn" formaction="/Compare/compares" style="display:inline">Compare selected charities >></button>

                    </form>

                }
                else
                {
                    <p>Your favorite list is empty, you can choose some charities first</p>

                }

            </div>

        </section>
    </main>

    <!-- END Filter Table-->
    <!-- Site footer -->
    <footer class="site-footer">

        <!-- Top section -->
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <h6>WikiCharity</h6>
                    <p class="text-justify">
                        WikiCharity is a platform to connect individuals, and businesses with information about charities & not-for-profits across Australia. The highly customizable search function will allow users to find charities based on their criteria. Search results will provide basic charity details, historical financial details, and calculated financial ratios. To hasten their search, or gain a deeper understanding of the charities, users are also able to compare charities for a side-by-side view of charity details.
                    </p>
                </div>

            </div>

            <hr>
        </div>
        <!-- END Top section -->
        <!-- Bottom section -->
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">

                    <p class="copyright-text">Copyrights &copy; @DateTime.Now.Year All Rights Reserved by QingGari</p>
                </div>
            </div>
        </div>
        <!-- END Bottom section -->

    </footer>
    <!-- END Site footer -->
    <!-- Back to top button -->
    <a id="scroll-up" href="#"><i class="ti-angle-up"></i></a>
    <!-- END Back to top button -->
    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    <script src="~/Scripts/chosen.proto.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.fixedHeader.min.js"></script>
    <script src="~/Scripts/FavList.js"></script>
    <script src="~/assets/js/thejobs.js"></script>

</body>
</html>