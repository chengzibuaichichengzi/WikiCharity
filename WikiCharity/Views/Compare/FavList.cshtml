@model IEnumerable<WikiCharity.Models.Charity>
@{
    ViewBag.Title = "Favourite List";
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="keywords" content="">

    <title>WikiCharity - Favourite List</title>

    <!-- Styles -->

    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/responsive.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/fixedHeader.dataTables.min.css" rel="stylesheet" />


    <link href="~/assets/css/app.min.css" rel="stylesheet">
    <link href="~/assets/css/thejobs.css" rel="stylesheet">
    <link href="~/assets/css/custom.css" rel="stylesheet">
    <link href="~/Content/chosen.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Raleway:100,300,400,500,600,800%7COpen+Sans:300,400,500,600,700,800%7CMontserrat:400,700' rel='stylesheet' type='text/css'>

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="icon" href="~/assets/img/favicon.ico">
</head>
<body class="nav-on-header smart-nav">
    <!-- Navigation bar -->
    <nav class="navbar">
        <div class="container">

            <!-- Logo -->
            <div class="pull-left">
                <a class="navbar-toggle" href="#" data-toggle="offcanvas"><i class="ti-menu"></i></a>

                <div class="logo-wrapper">
                    <a href="@Url.Action("Index", "Home", null)">
                        <img class="logo-alt" src="~/Uploads/logo.png" alt="logo-alt" style="width:90px;height:60px;">
                    </a>
                </div>

            </div>
            <!-- END Logo -->
            <!-- Navigation menu -->
            <ul class="nav-menu">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Favourite List", "FavList", "Compare")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Donor Advice", "DonorAdvice", "Home")</li>
                <li>@Html.ActionLink("FAQs", "FAQs", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
            <!-- END Navigation menu -->

        </div>
    </nav>
    <!-- END Navigation bar -->
    <header class="page-header bg-img">
        <div class="container no-shadow">
                <h1 class="text-center">Your Favourite Charity List</h1>
                <p class="lead text-center">You can compare up to three charities.</p>
        </div>
    </header>
    <!-- END Page header -->
    <main>
        <!-- Fav Table-->
        <div class="container">
            
            <form>
                <button class="btn btn-info btn-sm" id="compareBtn" formaction="/Compare/compares">Compare selected charities</button>
                <br />
                <button class="btn btn-info btn-sm" id="compareBtn2" formaction="/Compare/compare">Compare selected charities</button>
            </form>
            
            
            
            <a class="btn btn-info btn-sm" href="/Home/FilterResult">Clike here to view more charities</a>
            @if (Model != null && Model.Count() > 0)
            {
            <table id="favTable" class="display" style="width:100%;">
                <thead>
                    <tr>
                        <th style="width:20%">Charity Name</th>
                        <th style="width:6%">Size</th>
                        <th style="width:8%">Is Active?</th>
                        <th>Purpose</th>
                        <th>Beneficiaries</th>
                        <th>Compare it</th>
                        <th>Id</th>

                    </tr>
                </thead>
                <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => i.Name)</td>
                                <td>@Html.DisplayFor(modelItem => i.Size)</td>
                                <td>@Html.DisplayFor(modelItem => i.conActivity)</td>
                                <td>@Html.DisplayFor(modelItem => i.MainActivity)</td>
                                <td>@Html.DisplayFor(modelItem => i.selectedBenes)</td>
                                <td><button class="btn btn-primary" name="all" id="@i.Id">Compare it</button></td>
                                <td vis>@Html.DisplayFor(modelItem => i.Id)</td>
                            </tr>
                        }
                </tbody>
            </table>
            }
            else
            {
                <p>Your favorite list is empty, you can choose some charities first</p>
                
            }
        </div>
    </main>

    <!-- END Filter Table-->
    <!-- Site footer -->
    <footer class="site-footer">

        <!-- Top section -->
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-12">
                    <h6>WikiCharity</h6>
                    <p class="text-justify">
                        WikiCharity is a platform to connect individuals, and businesses with charities & not-for-profits across Australia. The highly customizable search function will allow users to find charities based on their criteria. Search results will provide basic charity details, and the charity’s historical financial details and financial ratios. Users will also be able to compare charities to aid users to narrow down on the charities which they would like to donate to.
                    </p>
                </div>

            </div>

            <hr>
        </div>
        <!-- END Top section -->
        <!-- Bottom section -->
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">

                    <p class="copyright-text">Copyrights &copy; @DateTime.Now.Year All Rights Reserved by QingGari</p>
                </div>
            </div>
        </div>
        <!-- END Bottom section -->

    </footer>
    <!-- END Site footer -->
    <!-- Back to top button -->
    <a id="scroll-up" href="#"><i class="ti-angle-up"></i></a>
    <!-- END Back to top button -->
    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/chosen.jquery.min.js"></script>
    <script src="~/Scripts/chosen.proto.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.responsive.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.fixedHeader.min.js"></script>
    <script src="~/Scripts/FavList.js"></script>
    <script src="~/assets/js/thejobs.js"></script>

</body>
</html>